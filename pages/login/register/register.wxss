.pageWrap .name{
  display: block;
  width:492rpx;
  height:111rpx;
  margin:120rpx auto 50rpx;
}
.logo{
  /* display: block; */
  position:absolute;
  bottom:100rpx;
  left:50%;
  margin-left:-187.5rpx;
  width:375rpx;
  height:70rpx;
  /* margin:80rpx auto 0; */
}
.pageWrap form{
  display: block;
  padding:0 80rpx;
}
.pageWrap form .section{
  height:140rpx;
  width:auto;
  display: flex;
  align-items: center;
  flex-wrap: nowrap;
}
.pageWrap form .section .icon{
  width:80rpx;
  height:80rpx;
  flex:0 0 auto;
}
.pageWrap form .section input{
  padding-left:14rpx;
  margin-left:14rpx;
  height:60rpx;
  line-height: 60rpx;
  width:480rpx;
  color:#333;
  font-size:36rpx;
  border-bottom:1px solid #2269d4;
  flex:1 1 auto;
}
.pageWrap form button{
  width: 100%;
	height: 76rpx;
  line-height: 76rpx;
	background-image: linear-gradient(84deg, 
		#1b56cc 0%, 
		#6d76ff 100%);
  font-size:43rpx;
  color:#fff;
  border:none;
  border-radius:38rpx;
  margin:40rpx auto;
}
.pageWrap form .btn-area{
  display: flex;
  justify-content: space-between;
}
.pageWrap form .btn-area view{
  width:6em;
  font-size: 26rpx;
  color: #666666;
}
.pageWrap form .btn-area view.active{
  color: #2269d4;
}
.errormsg{
  color: #ea1c25;
  font-size:24rpx;
  height:44rpx;
  /* line-height:44rpx; */
  /* padding-left:112rpx; */
  justify-content: center;
  display: flex;
  align-items: center;
}
.errormsg icon{
  margin-right:9rpx;
}