  font-size:28rpx;
  color: #333333;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
  line-height:80rpx;
}
.rescontent{
  font-size:24rpx;
  color: #666;
  line-height:40rpx;
}