/* pages/studentService/whoamI/tests/tests.wxss */
page{
  width:100%;
  height:100%;
}
.pageWrap{
  background-color: #feefda;
  width:100%;
  height:100%;
  position:relative;
  perspective: 1000px;
}
.tests{
  background-color: #ffffff;
	box-shadow: 0px 8rpx 49rpx 0rpx 
		rgba(18, 46, 116, 0.13);
	border-radius: 10rpx;
  width:600rpx;
  min-height:1000rpx;
  position:absolute;
  left:50%;
  top:50%;
  margin-left:-300rpx;
  margin-top:-500rpx;
  padding:0 36rpx;
  box-sizing: border-box;
  /* transform: translate3d(700rpx,0,-300rpx); */
  transform: translate3d(350px,0,-150px);
}
.tests .content{
  width:100%;
  padding:36rpx 0;
  border-bottom: solid 1px #d7d7d7;
}
.tests .content rich-text{
  width:100%;
  color: #333333;
  font-size:28rpx;
  /* line-height:30rpx; */
}
.options{

}
.radio{
  display: flex;
  border-bottom: solid 1px #d7d7d7;
  padding:20rpx;
  color: #333333;
  font-size:24rpx;
  align-items: center;
}
radio{
  margin-right:20rpx;
}
.btnbox.one{
  display: flex;
  height:100rpx;
  align-items: center;
  justify-content: center;
  margin:60rpx 0;  
}
.btnbox.two{
  display: flex;
  height:100rpx;
  align-items: center;
  justify-content: space-around;
  margin:60rpx 0;  
}
.pageWrap .tests .btn{
  width: 545rpx;
	height: 80rpx;
	background-image: linear-gradient(90deg, 
		#1b56cc 0%, 
		#6e78fd 100%);
	border-radius: 40rpx;
  font-size:30rpx;
  color:#fff;
  text-align: center;
  line-height: 80rpx;
  font-weight:700;
  padding:0;
  border:none;
}
.pageWrap .tests .btnl{
	height: 80rpx;
  width:250rpx;
  border-radius: 40rpx;
  font-size:30rpx; 
  border: solid 1px #3c75ff;
  color: #333333;
  padding:0;
}
.pageWrap .tests .one .btn{
  width:545rpx;
  flex:0 1 auto;
}
.pageWrap .tests .two .btn{
  flex:0 1 auto;
  width:250rpx;
}