/* pages/xxsaid/thoughtPolitical/thoughtPolitical.wxss */
.pageWrap{
  background-color:#f2f3f9;
}
.banner{
  width:auto;
  height:300rpx;
}
.banner image{
  width:100%;
  height:300rpx;
}
.xwlbWrap{
  background-color:#fff;
  padding:0rpx 0rpx 0;
  border-bottom:1px solid #dce6ec;
}
.xwlbWrap .title{
  font-size:30rpx;
  height:35rpx;
  width:100%;
  border-left:12rpx solid #2f9bfe;
  color: #666666;
  line-height:35rpx;
  padding-left:10rpx;
  margin-bottom:20rpx;
}
.xwlbList{
  height:120rpx;
  border-top:1px solid #dce6ec;
  padding:30rpx 30rpx 0;
}
.xwlbList image.new{
  height:30rpx;
  width:67rpx;
  /* vertical-align: middle; */
  /* margin-left:20rpx; */
  margin-left:10rpx;
  margin-right:10rpx;
}
.xwlbList .content{
  height:90rpx;
  width:auto;
  line-height:45rpx;
  position:relative;
  color: #333333;
  font-size:30rpx;
  padding-left:20rpx;
}
.xwlbList .content .point{
  width: 12rpx;
	height: 12rpx;
  border-radius: 50%;
	background-color: #ff8108;
  position:absolute;
  left:0;
  top:25%;
  margin-top:-6rpx;
}
.xwlbList .date{
  text-align: right;
  display: block;
  line-height:20rpx;
  color: #666666;
  font-size:18rpx;
}
.end{
  text-align: center;
  color: #333333;
  font-size:30rpx;
  background-color:#f2f3f9;
  margin:0 -20rpx;
}
.weui-loadmore{
  margin:5rpx auto;
  width:100%;
  border-top:1px solid #dce6ec;
}
.empty{
  font-size:24rpx;
  width:100%;
  text-align: center;
  line-height:200rpx;
  color: #a6a6a6;
}